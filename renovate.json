{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "automerge": true,
      "automergeType": "branch",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ],
  "schedule": [
    "after 16:00 every friday",
    "every weekend"
  ],
  "timezone": "America/Los_Angeles"
}